{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}" class="text-white">Logout</a>
			</div>
		{% endif %}
		<div class="d-flex justify-content-center pt-5">
			<h2 class="fw-medium text-white">Symfony Test</h2>
		</div>
		<div class="d-flex justify-content-center align-items-center mx-auto">
			<div class="d-flex flex-column align-items-center bg-dark p-4 rounded" style="min-width: 400px; width: 450px">
				<div class="d-flex">
					<h1 class="h4 mb-3 fw-medium text-white">Sign in</h1>
				</div>
				<div class="d-flex flex-column gap-4 w-100">
					<div class="d-flex flex-column w-100">
						<label for="username" class="text-white">Email</label>
						<input type="email" value="{{ last_username }}" name="_username" id="username" class="p-1 rounded bg-white w-100 border-0 mt-1" autocomplete="email" required autofocus>
					</div>
					<div class="d-flex flex-column w-100">
						<label for="password" class="text-white">Password</label>
						<input type="password" name="_password" id="password" class="p-1 rounded bg-white w-100 border-0 mt-1" autocomplete="current-password" required>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button class="bg-primary btn text-white p-1 mt-3 rounded w-100" type="submit">
						Sign in
					</button>
          <a href="{{ path('app_register') }}" class="text-white mt-3 mx-auto">Don't have an account? Register</a>
				</div>
			</div>
		</div>
		{#
							            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
							            See https://symfony.com/doc/current/security/remember_me.html
							
							            <div class="checkbox mb-3">
							                <label>
							                    <input type="checkbox" name="_remember_me"> Remember me
							                </label>
							            </div>
							        #}


	</form>
{% endblock %}
