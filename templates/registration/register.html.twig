{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center pt-5">
		<h2 class="fw-medium text-white">Symfony Test</h2>
	</div>
	<div class="d-flex justify-content-center">

		<div class="bg-dark p-4 rounded" style="min-width: 400px; width: 450px">
			<div class="d-flex">
				<h1 class="h4 mb-3 fw-medium text-white mx-auto">Register</h1>
			</div>
			{{ form_errors(registrationForm, {'attr': {'class': 'p-1 rounded bg-danger'}}) }}
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email, {'attr': {'class': 'p-1 rounded bg-white w-100 border-0 mt-1'}, 'label_attr': { 'class': 'd-block text-white'}, 'type' : 'email'}) }}
			<br/>
			{{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'p-1 rounded bg-white w-100 border-0 mt-1'}, 'label_attr': { 'class': 'd-block text-white'}}) }}
			{{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'text-white p-2 mx-auto'}}) }}
			<button type="submit" class="bg-primary border-0 text-white p-1 mt-1 rounded w-100">Register</button>
			{{ form_end(registrationForm) }}
		</div>
    
	</div>
  <div class="d-flex justify-content-center mt-3">
  <a href="{{ path('app_login') }}" class="text-white">Already have an account? sign in here</a>
  </div>
{% endblock %}
